<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CbetaTranslator.App.App"
             RequestedThemeVariant="Dark">

	<Application.Resources>

		<!-- Core app palette -->
		<SolidColorBrush x:Key="AppBg" Color="#FF111111"/>

		<SolidColorBrush x:Key="PanelBg" Color="#FF151515"/>
		<SolidColorBrush x:Key="PanelAltBg" Color="#FF1E1E1E"/>
		<SolidColorBrush x:Key="PanelBorder" Color="#FF2E2E2E"/>

		<SolidColorBrush x:Key="SplitterBrush" Color="#FF2A2A2A"/>

		<SolidColorBrush x:Key="MutedFg" Color="#FF9A9A9A"/>
		<SolidColorBrush x:Key="MainFg" Color="#FFE6E6E6"/>

		<!-- TextBox -->
		<SolidColorBrush x:Key="TextBoxBg" Color="#FF111111"/>
		<SolidColorBrush x:Key="TextBoxFg" Color="#FFE6E6E6"/>
		<SolidColorBrush x:Key="TextBoxBorder" Color="#FF2E2E2E"/>
		<SolidColorBrush x:Key="TextBoxBorderHover" Color="#FF6A6A6A"/>
		<SolidColorBrush x:Key="TextBoxBorderFocus" Color="#FFB0B0B0"/>
		<SolidColorBrush x:Key="TextSelectionBg" Color="#FF3A3A3A"/>

		<!-- Buttons -->
		<SolidColorBrush x:Key="ButtonBg" Color="#FF1A1A1A"/>
		<SolidColorBrush x:Key="ButtonBgHover" Color="#FF2A2A2A"/>
		<SolidColorBrush x:Key="ButtonBgPressed" Color="#FF333333"/>
		<SolidColorBrush x:Key="ButtonFg" Color="#FFE6E6E6"/>
		<SolidColorBrush x:Key="ButtonBorder" Color="#FF2E2E2E"/>
		<SolidColorBrush x:Key="ButtonBorderHover" Color="#FF6A6A6A"/>

		<!-- List/File list -->
		<SolidColorBrush x:Key="ListItemHoverBg" Color="#FF242424"/>
		<SolidColorBrush x:Key="ListItemSelectedBg" Color="#FF2A2A2A"/>

	</Application.Resources>

	<Application.Styles>

		<!-- Fluent theme (older API: no Mode property) -->
		<FluentTheme/>

		<!-- Default window background -->
		<Style Selector="Window">
			<Setter Property="Background" Value="{DynamicResource AppBg}"/>
		</Style>

		<!-- Muted text helper -->
		<Style Selector="TextBlock.muted">
			<Setter Property="Foreground" Value="{DynamicResource MutedFg}"/>
		</Style>

		<!-- TextBox (fix Linux focus turning white + wrong text color) -->
		<Style Selector="TextBox">
			<Setter Property="Background" Value="{DynamicResource TextBoxBg}"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBoxFg}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorder}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="CaretBrush" Value="{DynamicResource TextBoxFg}"/>
			<Setter Property="SelectionBrush" Value="{DynamicResource TextSelectionBg}"/>
		</Style>

		<Style Selector="TextBox:pointerover">
			<Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderHover}"/>
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="Background" Value="{DynamicResource TextBoxBg}"/>
			<Setter Property="Foreground" Value="{DynamicResource TextBoxFg}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderFocus}"/>
			<Setter Property="CaretBrush" Value="{DynamicResource TextBoxFg}"/>
		</Style>

		<!-- Button (fix hover “melting”) -->
		<Style Selector="Button">
			<Setter Property="Background" Value="{DynamicResource ButtonBg}"/>
			<Setter Property="Foreground" Value="{DynamicResource ButtonFg}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
			<Setter Property="BorderThickness" Value="1"/>
		</Style>

		<Style Selector="Button:pointerover">
			<Setter Property="Background" Value="{DynamicResource ButtonBgHover}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderHover}"/>
		</Style>

		<Style Selector="Button:pressed">
			<Setter Property="Background" Value="{DynamicResource ButtonBgPressed}"/>
		</Style>

		<Style Selector="Button:disabled">
			<Setter Property="Opacity" Value="0.55"/>
		</Style>

		<!-- ListBox / filenames list -->
		<Style Selector="ListBox">
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<Style Selector="ListBoxItem">
			<Setter Property="Foreground" Value="{DynamicResource MainFg}"/>
		</Style>

		<Style Selector="ListBoxItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource ListItemHoverBg}"/>
		</Style>

		<Style Selector="ListBoxItem:selected">
			<Setter Property="Background" Value="{DynamicResource ListItemSelectedBg}"/>
			<Setter Property="Foreground" Value="{DynamicResource MainFg}"/>
		</Style>

	</Application.Styles>
</Application>

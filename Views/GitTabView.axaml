<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CbetaTranslator.App.Views.GitTabView">

	<Grid RowDefinitions="Auto,Auto,Auto,*" RowSpacing="10">

		<!-- Actions -->
		<Border Grid.Row="0"
				Background="#FF1E1E1E"
				Padding="10"
				CornerRadius="8">
			<Grid ColumnDefinitions="Auto,Auto,Auto,*"
				  ColumnSpacing="10"
				  RowDefinitions="Auto,Auto,Auto"
				  RowSpacing="8">

				<Button Name="BtnPickDest"
						Grid.Row="0" Grid.Column="0"
						Content="Pick Location"
						Background="#33FFFFFF"/>

				<Button Name="BtnGetFiles"
						Grid.Row="0" Grid.Column="1"
						Content="Update Files"
						Background="#33FFFFFF"/>

				<Button Name="BtnCancel"
						Grid.Row="0" Grid.Column="2"
						Content="Cancel"
						Background="#33FFFFFF"
						IsEnabled="False"/>

				<TextBlock Name="TxtDest"
						   Grid.Row="1" Grid.Column="0"
						   Grid.ColumnSpan="4"
						   Foreground="#FFCCCCCC"
						   TextWrapping="Wrap"
						   Text="Location: (not set)"/>

				<TextBlock Name="TxtSelected"
						   Grid.Row="2" Grid.Column="0"
						   Grid.ColumnSpan="4"
						   Foreground="#FFAAAAAA"
						   TextWrapping="Wrap"
						   Text="Selected (CBETA): (none)"/>
			</Grid>
		</Border>

		<!-- Commit message + send -->
		<Border Grid.Row="1"
				Background="#FF202020"
				BorderBrush="#FF303030"
				BorderThickness="1"
				CornerRadius="8"
				Padding="10">
			<Grid ColumnDefinitions="*,Auto"
				  RowDefinitions="Auto,Auto"
				  ColumnSpacing="10"
				  RowSpacing="8">

				<TextBox Name="TxtCommitMessage"
						 Grid.Row="0" Grid.Column="0"
						 Watermark="Describe what you changed (short, human)"
						 Background="#FF2B2B2B"
						 Foreground="#FFEAEAEA"
						 BorderBrush="#FF444444"
						 BorderThickness="1"/>

				<Button Name="BtnSendContribution"
						Grid.Row="0" Grid.Column="1"
						Content="Send Contribution"
						Background="#33FFFFFF"/>

				<TextBlock Grid.Row="1"
						   Grid.ColumnSpan="2"
						   Foreground="#FF888888"
						   TextWrapping="Wrap"
						   Text="This will commit ONLY xml-p5t/&lt;Selected&gt;. Everything else is auto-stashed and restored."/>
			</Grid>
		</Border>

		<!-- Progress -->
		<Border Grid.Row="2"
				Background="#FF202020"
				BorderBrush="#FF303030"
				BorderThickness="1"
				CornerRadius="8"
				Padding="8">
			<TextBlock Name="TxtProgress"
					   Foreground="#FFCCCCCC"
					   TextWrapping="Wrap"
					   Text="Ready."/>
		</Border>

		<!-- Log -->
		<Border Grid.Row="3"
				Background="#FF202020"
				BorderBrush="#FF303030"
				BorderThickness="1"
				CornerRadius="8"
				Padding="8">
			<TextBox Name="TxtLog"
					 IsReadOnly="True"
					 AcceptsReturn="True"
					 TextWrapping="NoWrap"
					 FontFamily="Consolas"
					 Background="#FF1A1A1A"
					 Foreground="#FFEAEAEA"
					 BorderBrush="#FF444444"
					 BorderThickness="1"
					 ScrollViewer.VerticalScrollBarVisibility="Auto"
					 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
		</Border>

	</Grid>
</UserControl>
